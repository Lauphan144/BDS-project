@model IEnumerable<PropertyManagement1.Models.Property>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="text-align: center">Property</h2>

<p>
    @Html.ActionLink("Tạo Mới", "Create", new { } , new { @class="button-add" })
</p>
<table class="table">


   
    <div class="card">
      
        <!-- /.card-header -->
        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Property_Code)</th>
                        <th>@Html.DisplayNameFor(model => model.Property_Name)</th>
                     
                        <th>@Html.DisplayNameFor(model => model.Area)</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Avatar)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Property_Status.Property_Status_Name)
                        </th>

                        <th>
                            Option
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Property_Code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Property_Name)
                            </td>
                          
                            <td>
                                @Html.DisplayFor(modelItem => item.Area)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                <img src="~/Images/@item.Avatar" width="100px" />
                            </td>


                            <td>
                                @Html.DisplayFor(modelItem => item.Property_Status.Property_Status_Name)
                            </td>

                            <td>
                                <div class="btn-admin">

                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "button-edit" })
                                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "button-details" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "button-delete" })
                                </div>

                            </td>
                        </tr>
                    }

                </tbody>
                <tfoot>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Property_Code)</th>
                        <th>@Html.DisplayNameFor(model => model.Property_Name)</th>

                        <th>@Html.DisplayNameFor(model => model.Area)</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Avatar)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Property_Status.Property_Status_Name)
                        </th>

                        <th>
                            Option
                        </th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <!-- /.card-body -->
    </div>

</table>
