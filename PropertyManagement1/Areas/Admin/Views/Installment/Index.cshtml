@model IEnumerable<PropertyManagement1.Models.Installment_Contract>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="text-align: center">Hợp đồng thanh toán</h2>

<p>
    @Html.ActionLink("Tạo Mới", "Create", new { }, new { @class = "button-add" })
</p>
<table class="table">
    <div class="card">

        <!-- /.card-header -->
        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Installment_Contract_Code)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Customer_Name)
                        </th>



                        <th>
                            @Html.DisplayNameFor(model => model.Mobile)
                        </th>


                        <th>
                            @Html.DisplayNameFor(model => model.Payment_Period)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>




                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Property.Property_Code)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Installment_Contract_Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Customer_Name)
                        </td>



                        <td>
                            @Html.DisplayFor(modelItem => item.Mobile)
                        </td>


                        <td>
                            @Html.DisplayFor(modelItem => item.Payment_Period)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>


                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Property.Property_Code)
                        </td>
                        <td>
                            <div class="btn-admin btn-admin2">
                                @Html.ActionLink("Sửa", "Edit", new { id = item.ID }, new { @class = "button-edit" })
                                @Html.ActionLink("Chi Tiết", "Details", new { id = item.ID }, new { @class = "button-details" })
                                @Html.ActionLink("Xóa", "Delete", new { id = item.ID }, new { @class = "button-delete" })
                                @Html.ActionLink("In", "Print", new { id = item.ID }, new { @class = "button-print1" })
                            </div>

                        </td>
                    </tr>
                    }

                </tbody>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Installment_Contract_Code)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Customer_Name)
                        </th>



                        <th>
                            @Html.DisplayNameFor(model => model.Mobile)
                        </th>


                        <th>
                            @Html.DisplayNameFor(model => model.Payment_Period)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>




                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Property.Property_Code)
                        </th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <!-- /.card-body -->

    </div>
</table>